	<!-- trim, where, set : 단독으로 사용 불가, if, choose와 같이 사용 
		 bno 널이면 : select * from spring_board
		 bno 널이 아니면 : select * from spring_board where bno=#{bno}
	-->
	<select id="">
		select * from spring_board
		<where>
			<if test="bno != null">
				bno = #{bno}	
			</if>
		</where>
	</select>
	
	<!-- trim : 태그의 내용을 앞의 내용과 관련되어 원하는 접두/접미사 처리 
	
		 bno 널이면 : select * from spring_board where rownum=1
		 bno 널이 아니면 : select * from spring_board where bno=#{bno} and rownum=1
	-->
		<select id="">
		select * from spring_board
		<where>
			<if test="bno != null">
				bno = #{bno}	
			</if>
			<trim prefixOverrides="and">
				rownum = 1
			</trim>
		</where>
	</select>
	
	<!-- foreach : List, 배열, 맵 형태의 데이터를 루프를 통해 처리 
		
		Map<String, Stirng> map = new HashMap<>();
		map.put("T","TTTT");
		map.put("C","CCCC");	
	-->
	
	<!-- select * from spring_board where (title = ? or content =?)  -->
	<select id="">
		select * from spring_board
		
		<trim prefix="where (" suffix=")" prefixOverrides="OR">
			<foreach collection="map" item="val" index="key">
				<trim prefix="OR">
				<if test="key=='T'.toString()">
					title = #{val}
				</if>
				<if test="key=='C'.toString()">
					content =#{val}
				</if>
				<if test="key=='W'.toString()">
					writer = #{val}
				</if>
				</trim>
			</foreach>
		</trim>
	</select>
	
	
</mapper>