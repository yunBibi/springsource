<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">  <!-- 상황별 로그 레벨 WARN : 잠재적인 위험 -->

	<!-- Appenders 로그 기록 위치 설정 : 화면(SYSTEM_OUT), 파일, 데이터베이스 -->
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>
  </Appenders>
  	<!--  개별적인 로그 설정(파일 별, 패키지 별...) -->
  <Loggers>
  	<Logger name="com.company.app" level="trace">
  		<AppenderRef ref="Console"/>
  	</Logger>
    <Root level="error">
      <AppenderRef ref="Console"/>
    </Root>
  </Loggers>
</Configuration>